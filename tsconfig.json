{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "target": "es2016",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": [
    "node_modules",
    "types"
  ]
}