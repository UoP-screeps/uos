{
  "name": "uos",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes",
  "scripts": {
    "lint": "eslint ./src/** --ext .js,.ts,.jsx,.tsx",
    "build": "rollup -c",
    "build-unit-test": "rollup -c rollup.test-unit-config.js",
    "build-integration-test": "rollup -c rollup.test-integration-config.js",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-sim": "rollup -c --environment DEST:sim",
    "push-ptr": "rollup -c && grunt",
    "check": "npm run lint && npm run test",
    "test": "npm run test-unit && npm run test-integration-all ",
    "test-unit": "rollup -c rollup.test-unit-config.js && mocha dist/test-unit.bundle.js",
    "test-integration": "npm run build && rollup -c rollup.test-integration-config.js && mocha dist/test-integration.bundle.js",
    "test-integration-all": "npm run build && rollup -c rollup.test-integration-all-config.js && mocha dist/test-integration-all.bundle.js",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-sim": "rollup -cw --environment DEST:sim",
    "watch-ptr": "rollup -cw --environment DEST:ptr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UoP-screeps/uos.git"
  },
  "author": "Cookies",
  "license": "GPL-3.0",
  "homepage": "https://github.com/UoP-screeps/uos#readme",
  "engines": {
    "node": "10.x"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/chai": "^4.2.14",
    "@types/lodash": "3.10.2",
    "@types/mocha": "^8.0.4",
    "@types/node": "^13.13.1",
    "@types/screeps": "^3.1.0",
    "@types/sinon": "^9.0.9",
    "@types/sinon-chai": "^3.2.0",
    "@screeps/common": "^2.15.0",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "expect.js": "^0.3.1",
    "grunt": "^1.1.0",
    "grunt-screeps": "^1.5.0",
    "lodash": "^3.10.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rollup": "^2.34.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-nodent": "^0.2.2",
    "rollup-plugin-screeps": "^1.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "screeps-server-mockup": "^1.5.1",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^4.9.0",
    "reflect-metadata": "^0.1.13",
    "source-map": "~0.6.1",
    "typescript-ioc": "^3.2.2"
  }
}
